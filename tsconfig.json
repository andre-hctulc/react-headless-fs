{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ESNext",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "moduleResolution": "Node"
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
